// tsconfig.json
{
		"compilerOptions": {
			"target": "es2018",
			"module": "esnext",
			"moduleResolution": "node",
			"lib": [
				"esnext",
				"esnext.asynciterable",
				"dom"
			],
			"esModuleInterop": true,
			"allowJs": true,
			"noImplicitAny": false,
			"experimentalDecorators": true,
			"sourceMap": true,
			"strict": true,
			"strictPropertyInitialization": false,
			"noEmit": true,
			"baseUrl": ".",
			"paths": {
				"@/*": [
					"./*"
				]
			},
			"types": [
				"@types/node",
				"@nuxt/types",
				"vuetify"
			]
		},
		"exclude": [
			"node_modules",
			"server",
		]
	}
