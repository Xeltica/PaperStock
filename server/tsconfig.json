// tsconfig.json
{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "esnext.asynciterable",
      ],
      "esModuleInterop": true,
      "allowJs": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": "..",
      "paths": {
        "@/*": [
          "./*"
        ]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }